    <PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" Version="2.0.0" />
    <PackageReference Include="WebApiContrib.Core.Formatter.Csv" Version="1.0.3" />
    <PackageReference Include="YamlDotNet" Version="4.2.1" />
    <PackageReference Include="SapientGuardian.EntityFrameworkCore.MySql" Version="7.1.23" />
